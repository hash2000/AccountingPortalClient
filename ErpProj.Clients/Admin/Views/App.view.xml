<mvc:View controllerName="ErpProj.Home.Views.App"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:tnt="sap.tnt" displayBlock="true">

	<tnt:ToolPage id="toolPage" sideExpanded="true">

		<!--
			Панель управления в заголовке
		-->
		<tnt:header>
			<f:ShellBar id="Application-ShellBar"
				title="{i18n>appTitle}" 
				secondTitle="{i18n>appDescription}"
				showMenuButton="true"
				homeIcon="./resources/sap/ui/documentation/sdk/images/logo_ui5.png"
				showCopilot="true"
				showNotifications="true"
				menuButtonPressed="onMenuButtonPress"
				showProductSwitcher="false"
				notificationsNumber="0"
				notificationsPressed="onShellNotificationPress"
				>
				<f:profile>
					<Avatar id="Application-Avatar-CurrentUser" initials="?" press="onAuthorizationPress" />
				</f:profile>
			</f:ShellBar>
		</tnt:header>

		<!--
			Панель навигации			
		-->
		<tnt:sideContent>
			<tnt:SideNavigation expanded="true" selectedKey="{/selectedKey}" itemSelect="onItemSelect">
				<tnt:NavigationList items="{path: '/navigation'}">
					<tnt:NavigationListItem text="{title}" icon="{icon}" enabled="{enabled}" expanded="{expanded}" items="{items}" key="{key}">
						<tnt:NavigationListItem text="{title}" key="{key}" enabled="{enabled}">
						</tnt:NavigationListItem>
					</tnt:NavigationListItem>
				</tnt:NavigationList>
				<tnt:fixedItem>
					<tnt:NavigationList items="{path: '/fixedNavigation'}">
						<tnt:NavigationListItem text="{title}" icon="{icon}" enabled="{enabled}">
						</tnt:NavigationListItem>
					</tnt:NavigationList>
				</tnt:fixedItem>
			</tnt:SideNavigation>
		</tnt:sideContent>

		<!--
			Область отображения модулей
		-->
		<tnt:mainContents>
			<NavContainer id="NavigationPagesContainer">
			</NavContainer> 
		</tnt:mainContents>		

	</tnt:ToolPage>


</mvc:View>